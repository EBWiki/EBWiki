<!-- Meta Tag Information -->
<% content_for :meta_title, "People tracking the case of #{@this_case.title}" %>
<% content_for :meta_description, "There are #{@this_case.followers.count} people tracking the case of #{@this_case.title} on EBWiki" %>
<% content_for :meta_keywords, "#{@this_case.subjects.first&.name} police violence people color" %>

<!-- Page Content -->
<div class="container">
  <% if @this_case.followers.present? %>
	<!-- Article Followers Gallery -->
		<div class="row">
	    <div class="col-lg-12">
        <h3 class="page-header">This case currently has <%= pluralize(@this_case.followers.count, 'follower') %> tracking it on EBWiki.</h3>
				<h3 class="text-center"><%#= link_to 'Track this case', case_follows_path(@this_case), class: "btn btn-primary" %></h3>
      </div>
    </div>
		<div class="row">
      <div class="col-lg-12">
		    <% @this_case.followers.each do |follower| %>
			    <div class="col-lg-2 col-md-3 col-xs-12">
          <div class="">
            <%= link_to image_tag(avatar_url(follower,200), :class => "img-responsive"), follower %>
          </div>
      </div>
		    <% end %>
		  </div>
	  </div>

    <!-- Map -->
    <!-- We may decide to include a map that shows where people following this case are located -->
  <% else %>
    <h3 class="page-header"> There is no one currently following this case.</h3>
    <h3 class="text-center"><%#= link_to 'Track this case', case_follows_path(@this_case), class: "btn btn-primary" %></h3>
	<% end %>
</div>


<!-- /.row -->

<script type="text/javascript">
	$(document).ready(function(){
	    $('[data-toggle="popover"]').popover();
	});
</script>

