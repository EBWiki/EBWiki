<!-- Since this is the homepage,the meta tag information for this page is set as the default values. -->

<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <h2 class="page-header">These <span class="orange-font"><%= @total_cases %></span> people were killed by police.<br>We track their cases here.</h2>
      <h5 class='sub-pageheader'>EBWiki users are tracking 3611 cases of people killed by police. <%= link_to "Login", new_user_session_path %> or <%= link_to "Sign Up", new_user_registration_path %>  to follow a case or to add or update cases.</h5>
      <div id='front-gallery'>
        <%= render partial: 'thumbnail', layout: "index_thumbnail", collection: @cases, as: :this_case %>
      </div>
      <%= paginate @cases %>
      <p><%= page_entries_info @cases %></p>
    </div>
    <div class="col-md-3">
      <div id='front-sidebar'>
        <h4 class='side-leader'>Recently Updated</h4>
        <table class='table leader-list'>
          <tr>
            <th>Case</th>
            <th>Updated</th>
          </tr>

          <% @recently_updated_cases.each do |this_case| %>
            <tr>
              <td><%= link_to_case_title(this_case, 25) %></td>
              <td><small><%= display_updated_at(this_case) %></small></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
