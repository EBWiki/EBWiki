<% current_subject = f.object %>
<div class="nested-fields">
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.collection_select :gender_id, @genders, :id, :sex, {prompt: "Choose a Gender", selected: current_subject.gender_id} %>
    <%= f.input :ethnicity_id,:collection => @ethnicities,:label_method => :title,:value_method => :id,:label => "Race" ,:include_blank => false, :selected => current_subject.ethnicity_id %>
    <%= f.input :unarmed %>
    <%= f.input :mentally_ill %>
    <%= f.input :homeless%>
    <%= f.input :veteran %>
    <div class='btn-group'>
      <%= link_to_remove_association "remove subject", f, class: 'btn btn-primary btn-remove' %>
    </div>

</div>
